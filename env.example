# Telegram API Configuration
# Get these from https://my.telegram.org/auth
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Session (StringSession format)
# This will be generated automatically on first run
# Leave empty for initial setup
TELEGRAM_STRING_SESSION=

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_LOG_LEVEL=INFO

# Performance Tuning
FLOOD_SLEEP_THRESHOLD=60
REQUEST_TIMEOUT=30
MAX_PAGE_SIZE=100

# Resource Management
TEMP_DIR=/tmp/mcp-resources
RESOURCE_MAX_AGE_HOURS=24
NDJSON_CHUNK_SIZE=1000

# Observability
ENABLE_PROMETHEUS_METRICS=true
ENABLE_OPENTELEMETRY_TRACING=true
OTLP_ENDPOINT=http://localhost:4318

# Development
DEBUG=false
LOG_FORMAT=json

# OpenTelemetry Tracing
ENABLE_OPENTELEMETRY_TRACING=true
OTLP_ENDPOINT=http://localhost:4318
OTLP_EXPORTER=grpc
SERVICE_NAME=telegram-toolkit-mcp
SERVICE_VERSION=1.0.0
TRACE_SAMPLING_RATE=1.0
TRACE_MAX_ATTRIBUTES=128
TRACE_MAX_EVENTS=128
